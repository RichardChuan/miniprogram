<view class="list">
  <view class="list_top flex ai">
    <view class="flex_item">
      <span>{{Name}}</span>
      <span>{{Sex=="M"?'男':'女'}}</span>
      <span>{{NationText}}</span>
    </view>
    <button style="width:auto;" class="btn_mini btn_hollow" bind:tap="onPhoneCall" disabled="{{IsPhoneChange}}">联系Ta</button>
  </view>
  <view class="list_top">证件号码：{{CardCode}}</view>
  <view class="list_top">住址：{{Address}}</view>
</view>
<view class="list last_list">
  <view class="list_item flex">
    <view class="item_title">手机号：</view>
    <view class="item_content flex_item">
      <input
        type="number"
        value="{{Phone}}"
        placeholder="请输入手机号"
        maxlength="11"
        bindinput="onChange"
        data-target="Phone"
      ></input>
    </view>
  </view>
  <view class="list_item flex">
    <view class="item_title">工种：</view>
    <view class="item_content flex_item">
      <picker
        value="{{WorkIndex}}"
        bindchange="onChange"
        data-target="WorkIndex"
        range="{{WorkType}}"
        range-key="DictName"
      >
        <view>{{WorkType[WorkIndex].DictName}}</view>
      </picker>
    </view>
  </view>
  <view class="list_item flex">
    <view class="item_title">是否安全培训：</view>
    <view class="item_content flex_item">
      <radio-group
        bindchange="onChange"
        data-target="IsSafetyTraining"
      >
        <radio
          class="radio"
          color="#3b77e3"
          value="1"
          checked="{{IsSafetyTraining==true?true:false}}"
        >是</radio>
        <radio
          class="radio"
          color="#3b77e3"
          value="0"
          checked="{{IsSafetyTraining==false?true:false}}"
        >否</radio>
      </radio-group>
    </view>
  </view>
  <view class="list_item flex">
    <view class="item_title">是否建委备案：</view>
    <view class="item_content flex_item">
      <radio-group 
        bindchange="onChange" 
        data-target="IsRecord"
      >
        <radio
          class="radio"
          color="#3b77e3"
          value="1"
          checked="{{IsRecord==true?true:false}}"
        >是</radio>
        <radio
          class="radio"
          color="#3b77e3"
          value="0"
          checked="{{IsRecord==false?true:false}}"
        >否</radio>
      </radio-group>
    </view>
  </view>
  <view class="list_item flex">
    <view class="item_title">上岗证书号：</view>
    <view class="item_content flex_item">
      <input
        type="number"
        value="{{WorkCertificateCode}}"
        placeholder="请输入岗证书号"
        bindinput="onChange"
        data-target="WorkCertificateCode"
      ></input>
    </view>
  </view>
  <view class="list_item flex">
    <view class="item_title">合同编号：</view>
    <view class="item_content flex_item">
      <input
        type="number"
        value="{{ContractCode}}"
        placeholder="请输入合同编号"
        bindinput="onChange"
        data-target="ContractCode"
      ></input>
    </view>
  </view>
  <view class="list_item">
    <view class="item_title">备注信息：</view>
    <view class="item_content">
      <textarea
        value="{{Remark}}"
        placeholder="请输入备注信息"
        bindinput="onChange"
        data-target="Remark"
      ></textarea>
    </view>
  </view>
</view>
<view class="footer">
  <view class="fixed flex ai">
    <view class="flex_item">
      <view class="btn btn_solid" bind:tap="onSubmit">修改</view>
    </view>
  </view>
</view>
<toptips type="{{Tips.type}}" show="{{Tips.msg}}" msg="{{Tips.msg}}" delay="2000"></toptips>