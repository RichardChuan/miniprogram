page{
  background-color:#f1f1f1;
}
.footer{
  height:120rpx;
}
.list{
  padding:32rpx;
  margin-bottom:32rpx;
  line-height:96rpx;
  font-size:32rpx;
  background-color:#fff;
}

.list_item{
  margin-bottom:32rpx;
}
.list_item:last-child{
  margin-bottom:0;
}
.list_top{
  color:#666;
}
.list_top span{
  margin-right:16rpx;
}
.list_top span:first-child{
  font-size:48rpx;
  color:#333;
}

.item_title{
  height:96rpx;
}

.item_btn{
  box-sizing:content-box;
  padding:0 16rpx;
  height:48rpx;
  line-height:48rpx;
  border:1px solid #3b77e3;
  border-radius:8rpx;
  font-size:28rpx;
}

.fixed{
  position:fixed;
  bottom:0;
  left:0;
  z-index:999;
  width:100%;
  height:120rpx;
  background-color:#fff;
  box-shadow:0 0 36rpx rgba(0,0,0,0.12);
}
.btn{
  margin:0 32rpx;
  height:90rpx;
  border:1px solid #3b77e3;
  line-height:calc(90rpx);
  border-radius:16rpx;
  font-size:36rpx;
  text-align:center;
}