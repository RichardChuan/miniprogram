.banner{
  position:relative;
  width:750rpx;
  height:480rpx;
  overflow:hidden;
  margin-bottom:-120rpx;
  text-align:center;
}
.image{
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
  width:100%;
  filter:blur(5rpx);
}
.title{
  display:inline-block;
  margin-top:140rpx;
  padding:16rpx 32rpx;
  font-size:48rpx;
  background-color:rgba(255,255,255,0.5);
}
.sub_title{
  display:inline-block;
  margin-top:16rpx;
  padding:8rpx 16rpx;
  font-size:28rpx;
  background-color:rgb(255,204,112);
}