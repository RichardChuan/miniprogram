.flex_box{
  display:flex;
}
.ai{
  align-items:center;
}
.jc{
  justify-content:center;
}
.flex_item{
  flex:1;
}

.list{
  margin:32rpx;
  padding-bottom:140rpx;
  font-size:32rpx;
}
.list_item{
  margin-bottom:48rpx;
  border-bottom:1px solid #e6e6e6;
}
.list_item:last-child{
  border-bottom:0;
}
.item_title,.item_content{
  margin:16rpx 0;
  line-height:56rpx;
}
picker{
  height:56rpx;
  line-height:56rpx;
}
input{
  height:56rpx;
  line-height:56rpx;
}
input[disabled]{
  color:#9F9F9F;
}
textarea{
  width:100%;
  height:112rpx;
  line-height:56rpx;
}
textarea[disabled]{
  color:#9F9F9F;
}
.radio{
  margin-right:32rpx;
}
.radio .wx-radio-input-checked.wx-radio-input-disabled {
  background-color:#3b77e3;
  border:2rpx solid #3b77e3;
}
.radio .wx-radio-input.wx-radio-input-checked:before{
  color:#fff;
}

.fixed{
  position:fixed;
  bottom:0;
  left:0;
  z-index:999;
  width:100%;
  height:120rpx;
  background-color:#fff;
  box-shadow:0 0 36rpx rgba(0,0,0,0.12);
}
.btn{
  margin:0 32rpx;
  height:90rpx;
  border:1px solid #3b77e3;
  line-height:calc(90rpx);
  border-radius:16rpx;
  font-size:36rpx;
  text-align:center;
}
.btn_modify{
  background-color:#fff;
  color:#3b77e3;
}
.btn_confirm{
  background-color:#3b77e3;
  color:#fff;
}
.btn_add{
  background-color:#3b77e3;
  color:#fff;
}