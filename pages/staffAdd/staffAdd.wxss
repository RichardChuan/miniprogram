.flex{
  display:flex;
  display:-webkit-flex;
}
.flex_item{
  flex:1;
}
.flex_right{
  margin-left:auto;
}
.ai{
  align-items:center;
}
.jc{
  justify-content:center;
}
.cRed{
  color:red;
}

.list{
  padding:32rpx;
  font-size:32rpx;
}
.list_item{
  margin-bottom:32rpx;
}
.item_title{
  height:96rpx;
  line-height:96rpx;
}

input,picker{
  height:96rpx;
  line-height:96rpx;
  padding:0 32rpx;
  border-bottom:1px solid #ebeef5;
  color:#333;
}
input[disabled]{
  color:#9F9F9F;
}
radio{
  margin-left:32rpx;
  line-height:96rpx;
}
radio .wx-radio-input-checked.wx-radio-input-disabled {
  background-color:#3b77e3 !important;
  border:2rpx solid #3b77e3 !important;
}
radio .wx-radio-input.wx-radio-input-checked:before{
  color:#fff !important;
}
textarea{
  width:100%;
  height:112rpx;
  line-height:32rpx;
}
textarea[disabled]{
  color:#9F9F9F;
}


.fixed{
  position:fixed;
  bottom:0;
  left:0;
  z-index:999;
  width:100%;
  height:120rpx;
  background-color:#fff;
  box-shadow:0 0 36rpx rgba(0,0,0,0.12);
}
.btn{
  margin:0 32rpx;
  height:90rpx;
  border:1px solid #3b77e3;
  line-height:calc(90rpx);
  border-radius:16rpx;
  font-size:36rpx;
  text-align:center;
}
.btn_modify{
  background-color:#fff;
  color:#3b77e3;
}
.btn_confirm{
  background-color:#3b77e3;
  color:#fff;
}
.btn_add{
  background-color:#3b77e3;
  color:#fff;
}