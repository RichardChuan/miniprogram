.list{
  margin:32rpx;
}
.list_item{
  display:flex;
  overflow:hidden;
  height:108rpx;
  line-height:108rpx;
  font-size:36rpx;
}
.item_left{
  width:200rpx;
  text-align:justify;
}
.item_left:after{
  content:'';
  display:inline-block;
  width:100%;
}
.item_right{
  flex:1;
}

.btn{
  box-sizing:border-box;
  height:96rpx;
  line-height:calc(96rpx - 2px);
  margin-top:32rpx;
  padding:0;
  border:1px solid #3b77e3;
  font-size:36rpx;
  text-align:center;
  color:#3b77e3;
  background-color:#fff;
}
.hoverBtn{
  color:#fff;
  background-color:#3b77e3;
}