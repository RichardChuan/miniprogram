.flex{
  display:flex;
  display:-webkit-flex;
}
.flex_item{
  flex:1;
}
.flex_right{
  margin-left:auto;
}
.ai{
  align-items:center;
}
.jc{
  justify-content:center;
}

.mar32{
  margin:32rpx;
}
.pad32{
  padding:32rpx;
}

.bd_radius{
  overflow:hidden;
  border-radius:24rpx;
}
.bd_circle{
  overflow:hidden;
  border-radius:50%;
}

.ellips,.ellips2,.ellips3{
  display:box;
  box-orient:vertical;
  overflow:hidden;
}
.ellips{
  line-clamp:1;
}
.ellips2{
  line-clamp:2;
}
.ellips3{
  line-clamp:3;
}

.btn_solid,.btn_hollow{
  border:1px solid #3b77e3;
  text-align:center;
}
.btn_solid{
  color:#fff;
  background-color:#3b77e3;
}
.btn_solid_hover{
  background-color:#336adf;
}
.btn_hollow{
  color:#3b77e3;
  background-color:#fff;
}
.btn_hollow_hover{
  background-color:#efefef;
}

.box_shadow{
  box-shadow:0rpx 2rpx 30rpx 0rpx rgba(0,0,0,0.1);
}


input,picker{
  height:96rpx;
  line-height:96rpx;
  padding:0 32rpx;
  border-bottom:1px solid #ebeef5;
  color:#333;
}
radio{
  margin-left:32rpx;
  line-height:96rpx;
}
radio .wx-radio-input-checked.wx-radio-input-disabled {
  background-color:#3b77e3 !important;
  border:2rpx solid #3b77e3 !important;
}
radio .wx-radio-input.wx-radio-input-checked:before{
  color:#fff !important;
}
textarea{
  width:100%;
  height:112rpx;
  line-height:32rpx;
}
input[disabled],radio[disabled],picker[disabled],textarea[disabled]{
  color:#9F9F9F;
}